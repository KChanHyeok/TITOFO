<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scheduler2">

    <TextView
        android:id="@+id/thu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|center"
        android:text="목"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintStart_toEndOf="@+id/wed" />

    <TextView
        android:id="@+id/sat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|center"
        android:text="토"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintStart_toEndOf="@+id/fri" />

    <TextView
        android:id="@+id/mon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|center"
        android:text="월"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintStart_toEndOf="@+id/week" />

    <TextView
        android:id="@+id/sun"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|center"
        android:text="일"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintStart_toEndOf="@+id/sat" />

    <TextView
        android:id="@+id/wed"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|center"
        android:text="수"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintStart_toEndOf="@+id/tue" />

    <TextView
        android:id="@+id/tue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|center"
        android:text="화"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintStart_toEndOf="@+id/mon" />

    <TextView
        android:id="@+id/fri"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|center"
        android:text="금"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintStart_toEndOf="@+id/thu" />

    <Button
        android:id="@+id/button_add_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="200dp"
        android:text="제목"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_start_ten_min_up"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▲"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_start_hour_up"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_start_hour_down"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▼"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/button_start_hour_up" />

    <Button
        android:id="@+id/button_end_hour_down"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▼"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/end"
        app:layout_constraintTop_toBottomOf="@+id/button_end_hour_up" />

    <Button
        android:id="@+id/button_start_ten_min_down"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▼"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_start_hour_down"
        app:layout_constraintTop_toBottomOf="@+id/button_start_ten_min_up" />

    <Button
        android:id="@+id/button_end_ten_min_up"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▲"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_end_hour_up"
        app:layout_constraintTop_toBottomOf="@+id/button_start_ten_min_down" />

    <Button
        android:id="@+id/button_end_ten_min_down"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▼"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_end_hour_down"
        app:layout_constraintTop_toBottomOf="@+id/button_end_ten_min_up" />

    <Button
        android:id="@+id/button_start_one_min_up"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▲"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_start_ten_min_up"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_end_one_min_up"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▲"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_end_ten_min_up"
        app:layout_constraintTop_toBottomOf="@+id/button_start_one_min_down" />

    <Button
        android:id="@+id/button_start_hour_up"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▲"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/start"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_end_one_min_down"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▼"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_end_ten_min_down"
        app:layout_constraintTop_toBottomOf="@+id/button_end_one_min_up" />

    <Button
        android:id="@+id/button_start_one_min_down"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▼"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/button_start_ten_min_down"
        app:layout_constraintTop_toBottomOf="@+id/button_start_one_min_up" />

    <Button
        android:id="@+id/button_end_hour_up"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="▲"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/end"
        app:layout_constraintTop_toBottomOf="@+id/button_start_hour_down" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="749dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="300dp"
        android:gravity="center|center_vertical"
        android:text="시작"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/end"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="300dp"
        android:gravity="center|center_vertical"
        android:text="종료"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <TextView
        android:id="@+id/week"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="4dp"
        android:gravity="center|center_vertical"
        android:text="요일"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/all_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/all_week"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginTop="352dp"
        android:scaleX="0.85"
        android:scaleY="0.85"
        android:text="요일 전체 선택"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choose_message"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:scaleX="0.85"
        android:scaleY="0.85"
        android:text="메세지 선택"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_week" />

    <Button
        android:id="@+id/bt_pink"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#fccee2"
        app:layout_constraintStart_toEndOf="@+id/bt_blue"
        app:layout_constraintTop_toBottomOf="@+id/all_week"
        app:rippleColor="@color/purple_200" />

    <Button
        android:id="@+id/bt_green"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#acfb3d"
        app:layout_constraintStart_toEndOf="@+id/bt_pink"
        app:layout_constraintTop_toBottomOf="@+id/all_week"
        app:rippleColor="@color/purple_200" />

    <Button
        android:id="@+id/bt_blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#beebfd"
        app:layout_constraintStart_toEndOf="@+id/color"
        app:layout_constraintTop_toBottomOf="@+id/all_week"
        app:rippleColor="@color/purple_200" />

    <Button
        android:id="@+id/bt_darkblue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#9ec5d5"
        app:layout_constraintStart_toEndOf="@+id/bt_green"
        app:layout_constraintTop_toBottomOf="@+id/all_week"
        app:rippleColor="@color/purple_200" />

    <TextView
        android:id="@+id/color"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="300dp"
        android:gravity="center|center_vertical"
        android:text="색상"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_week" />

    <TextView
        android:id="@+id/start_hour"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="right|center_vertical"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/button_start_hour_down"
        app:layout_constraintStart_toEndOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/button_start_hour_up" />

    <TextView
        android:id="@+id/end_hour"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="right|center_vertical"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/button_end_hour_down"
        app:layout_constraintStart_toEndOf="@+id/end"
        app:layout_constraintTop_toBottomOf="@+id/button_end_hour_up" />

    <TextView
        android:id="@+id/start_min"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/button_start_ten_min_down"
        app:layout_constraintEnd_toStartOf="@+id/button_start_one_min_up"
        app:layout_constraintStart_toEndOf="@+id/button_start_ten_min_up"
        app:layout_constraintTop_toBottomOf="@+id/button_start_ten_min_up" />

    <TextView
        android:id="@+id/end_min"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/button_end_ten_min_down"
        app:layout_constraintEnd_toStartOf="@+id/button_end_one_min_up"
        app:layout_constraintStart_toEndOf="@+id/button_end_ten_min_up"
        app:layout_constraintTop_toBottomOf="@+id/button_end_ten_min_up" />

</androidx.constraintlayout.widget.ConstraintLayout>